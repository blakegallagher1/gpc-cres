{
  "name": "@entitlement-os/db",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "pnpm run generate && tsc -p tsconfig.json",
    "dev": "tsc -w -p tsconfig.json",
    "lint": "eslint src test --max-warnings=0 --no-error-on-unmatched-pattern",
    "typecheck": "pnpm run generate && tsc -p tsconfig.json --noEmit && tsc -p tsconfig.seed.json --noEmit",
    "test": "vitest run --passWithNoTests",
    "prisma": "dotenv -e ../../.env -- prisma",
    "generate": "sh -c 'DATABASE_URL=${DATABASE_URL:-postgresql://postgres:postgres@localhost:5432/postgres} DIRECT_DATABASE_URL=${DIRECT_DATABASE_URL:-postgresql://postgres:postgres@localhost:5432/postgres} prisma generate'",
    "migrate:dev": "dotenv -e ../../.env -- prisma migrate dev",
    "migrate:dev:local": "sh -c 'DATABASE_URL=${DATABASE_URL_LOCAL:-postgresql://postgres:postgres@localhost:54323/entitlement_os?schema=public} DIRECT_DATABASE_URL=${DIRECT_DATABASE_URL_LOCAL:-postgresql://postgres:postgres@localhost:54323/entitlement_os?schema=public} prisma migrate dev'",
    "migrate:deploy:local": "sh -c 'DATABASE_URL=${DATABASE_URL_LOCAL:-postgresql://postgres:postgres@localhost:54323/entitlement_os?schema=public} DIRECT_DATABASE_URL=${DIRECT_DATABASE_URL_LOCAL:-postgresql://postgres:postgres@localhost:54323/entitlement_os?schema=public} prisma migrate deploy'",
    "migrate:deploy": "dotenv -e ../../.env -- prisma migrate deploy",
    "seed": "dotenv -e ../../.env -- tsx seed/seed.ts"
  },
  "dependencies": {
    "@prisma/client": "~6.19.2"
  },
  "devDependencies": {
    "@types/node": "^22.13.4",
    "dotenv-cli": "^8.0.0",
    "eslint": "^9.20.1",
    "prisma": "~6.19.2",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "vitest": "^4.0.18"
  },
  "prisma": {
    "seed": "tsx seed/seed.ts"
  }
}
