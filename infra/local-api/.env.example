# =============================================================================
# Local API Server Environment Variables
# =============================================================================
# Copy this file to .env and fill in your values

# Database Connection
# PostgreSQL connection string for local database
DATABASE_URL=postgresql://postgres:YOUR_PASSWORD@localhost:5432/cres_db

# Martin Tile Server
# URL where Martin is running (default: http://localhost:3000)
MARTIN_URL=http://localhost:3000

# API Authentication
# Comma-separated list of API keys for Vercel to authenticate
# Generate secure keys with: openssl rand -hex 32
# Example: API_KEYS=abc123def456,xyz789uvw012
API_KEYS=

# CORS Origins
# Comma-separated list of allowed origins (Vercel domains)
# Example: ALLOWED_ORIGINS=https://gallagherpropco.com,https://your-app.vercel.app
ALLOWED_ORIGINS=https://gallagherpropco.com,https://*.vercel.app

# Server Configuration
# Port the FastAPI server will run on (default: 8080)
PORT=8080

# Host binding (0.0.0.0 allows external connections, 127.0.0.1 is localhost-only)
HOST=0.0.0.0
